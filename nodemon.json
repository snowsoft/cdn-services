{
  "verbose": false,
  "watch": [
    "src/**/*",
    ".env"
  ],
  "ignore": [
    "**/*.test.js",
    "**/*.spec.js",
    "node_modules",
    "logs",
    "coverage",
    "dist",
    ".git"
  ],
  "ext": "js,json,ts,yaml,yml",
  "delay": 1000,
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "app:*"
  },
  "execMap": {
    "js": "node",
    "ts": "ts-node"
  },
  "events": {
    "start": "echo '\\nðŸš€ Application starting...'",
    "restart": "echo '\\nðŸ”„ Application restarting due to changes...'",
    "crash": "echo '\\nðŸ’¥ Application crashed! Waiting for file changes...'"
  },
  "restartable": "rs",
  "colours": true
}